@using Gestion_de_Produit.models
@model Produit
@{
}
<div class="container  p-5 w-100">
    <div>
        <div class="mb-3 row">
            <label for="StaticId" class="col-sm-2 col-form-label">Id :</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="StaticId" value="@Model.ProductID">
            </div>
        </div>
        <div class="mb-2 row">
            <label for="StaticName" class="col-sm-2 col-form-label">Name :</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="StaticName" value='@Model.ProductName'>
            </div>
        </div>
        <div class="mb-3 row">
            <label for="StaticCategoryName" class="col-sm-2 col-form-label">Unit Price :</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="StaticCategoryName" value="@Model.UnitPrice">
            </div>
        </div>
        <div class="mb-3 row">
            <label for="StaticStock" class="col-sm-2 col-form-label">Units in Stock : </label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="StaticStock" value="@Model.QuantityPerUnit">
            </div>
        </div>
    </div>
</div>
